--run with a bypass!
maxtime=30 -- how long before the server closes when your banned/kicked.
name='hiphiphortsnort' -- enter the player who will be unbannable's name.
local t=0
function getplr()
for i,v in pairs(game:service'Players':GetPlayers()) do
if v.Name == name then
return v
end
end
end
function msg(txt)
pcall(function()
local c=oldmsg
oldmsg=nil
game:service'Debris':AddItem(oldmsg,0)
end)
oldmsg=Instance.new'Message'
local Msg=oldmsg
oldmsg.Text=name..'\'s Anti-Ban: '..txt
oldmsg.Parent=workspace
oldmsg.Changed:wait()
if oldmsg==Msg then
msg(txt)
else
end
end
while wait(1) do
local plr=getplr()
if plr then
t=0
pcall(function()
local c=oldmsg
oldmsg=nil
wait()
game:service'Debris':AddItem(c,0)
end)
elseif t < maxtime then
t=t+1
spawn(function()
msg('Server closing in '..maxtime-t..' seconds unless '..name..' rejoins!')
end)
else
spawn(function()
msg('Server closing due to '..name..'\'s Anti-Ban.')
end)
repeat
for i,v in pairs(game:service'Players':GetPlayers()) do
if v.Name ~= name then
v:kick('Game closed because '..name..' was kicked.')
end
end
wait()
until t==0
end
end
